<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            tools:context=".Fragments.DeliveryDetallesFragment">
    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/colorAccent" android:id="@+id/cardView"
                app:layout_constraintBottom_toTopOf="@+id/textView5">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp" app:srcCompat="@drawable/carrito"
                        android:id="@+id/imagen" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline18"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline19"
                        android:background="@color/colorPrimary"/>
                <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                      android:layout_height="wrap_content" android:id="@+id/guideline18"
                                                      android:orientation="vertical"
                                                      app:layout_constraintGuide_percent="0.3"/>
                <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                      android:layout_height="wrap_content" android:id="@+id/guideline19"
                                                      android:orientation="horizontal"
                                                      app:layout_constraintGuide_percent="0.52"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/id" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline18"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/nombree" android:textSize="18sp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/nombree" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/id"
                        app:layout_constraintStart_toStartOf="@+id/guideline18"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/total" android:textSize="18sp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/total" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/nombree"
                        app:layout_constraintStart_toStartOf="@+id/guideline18"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline19"
                        android:textSize="18sp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/nombre"
                        app:layout_constraintTop_toTopOf="@+id/guideline19"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/telefono" android:textSize="18sp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/telefono"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/nombre" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/direccion" android:textSize="18sp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/direccion" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/telefono"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:textSize="18sp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
        <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="left|bottom"
                android:paddingBottom="16dp"
                android:paddingStart="16dp"
                android:text="@string/delivery"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/primaryTextColor"
                android:background="@color/colorAccent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/delivery_detall"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:id="@+id/delivery_detall"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5">
        </android.support.v7.widget.RecyclerView>

        <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                app:menu_animationDelayPerItem="55"
                app:menu_backgroundColor="@android:color/transparent"
                app:menu_buttonSpacing="0dp"
                app:menu_colorNormal="@color/colorAccent"
                app:menu_colorPressed="@color/colorPrimary"
                app:menu_colorRipple="#99d4d4d4"
                app:menu_icon="@android:drawable/ic_menu_info_details"
                app:menu_labels_colorNormal="#333"
                app:menu_labels_colorPressed="#444"
                app:menu_labels_colorRipple="#66efecec"
                app:menu_labels_cornerRadius="3dp"
                app:menu_labels_ellipsize="none"
                app:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
                app:menu_labels_margin="0dp"
                app:menu_labels_maxLines="-1"
                app:menu_labels_padding="8dp"
                app:menu_labels_position="left"
                app:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
                app:menu_labels_showShadow="true"
                app:menu_labels_singleLine="false"
                app:menu_labels_textColor="#f2f1f1"
                app:menu_labels_textSize="15sp"
                app:menu_openDirection="up"
                app:menu_shadowColor="#66aff198"
                app:menu_shadowRadius="4dp"
                app:menu_shadowXOffset="1dp"
                app:menu_shadowYOffset="4dp"
                app:menu_showShadow="true"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
                app:layout_constraintHorizontal_bias="1.0">

            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/ubicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:fab_label="Ir"
                    app:fab_size="mini"/>

            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/llamada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_call"
                    app:fab_label="Llamar"
                    app:fab_size="mini"/>

        </com.github.clans.fab.FloatingActionMenu>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
